

<html>

<button id="rzp-button1" class="btn btn-primary btn-lg">
  <i class="fas fa-money-bill"></i> Pay Now
</button>

<script src="https://checkout.razorpay.com/v1/checkout.js"></script>

<script>
  var options = {
    "key": "rzp_test_Rqz8b28Azp5Nhy",
    "amount": "<%= order_data[0].total_amount *100 %>",
    "currency": "INR",
    "name": "ZADE PATIL PVT. LTD.",
    "description": "Test Payment",
    "image": "/zade.png",

    "method": {
      "upi": true,
      "card": true,
      "wallet": true,
      "netbanking": true,
      "emi": true
    },

    // âœ… AUTO REDIRECT URL AFTER PAYMENT
    "callback_url": "https://zade-patil-pvt-ltd.onrender.com/payment_details/<%= order_data[0].order_id %>/<%= user_id %>", 
    "redirect": true,

    "prefill": {
      "name": "<%= order_data[0].customer_name %>",
      "email": "xyz@123.com",
      "contact": "<%= order_data[0].customer_mobile %>"
    },

    "theme": {
      "color": "#3399cc"
    }
  };

  var rzp1 = new Razorpay(options);

  document.getElementById("rzp-button1").onclick = function (e) {
    rzp1.open();
    e.preventDefault();
  };
</script>
</html> 
