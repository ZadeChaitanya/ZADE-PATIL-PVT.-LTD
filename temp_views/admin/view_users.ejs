<%- include("navbar.ejs") %>
     <div class="container my-4">

          <h2 class="mb-4 fw-bold p-4 bg-light">Users List</h2>

          <div class="row g-4">

               <% users.map((user, i)=> { %>

                    <div class="col-md-6">
                         <div class="card shadow-sm border-0 rounded-4">

                              <!-- User Image -->
                              <div class="text-center p-3">
                                   <img src="/uploads/<%= user.profile_image %>" class="rounded-circle"
                                        style="width: 120px; height: 120px; object-fit: cover;">
                              </div>

                              <!-- User Info -->
                              <div class="card-body">

                                   <h5 class="fw-bold text-dark">
                                        <%= user.user_name %>
                                   </h5>

                                   <p class="text-muted m-0">
                                        <i class="fa-solid fa-phone me-2"></i>
                                        <%= user.user_mobile %>
                                   </p>

                                   <p class="text-muted m-0">
                                        <i class="fa-solid fa-envelope me-2"></i>
                                        <%= user.user_email %>
                                   </p>

                                   <p class="text-muted mt-2">
                                        <i class="fa-solid fa-location-dot me-2"></i>
                                        <%= user.address.substring(0, 40) %>...
                                   </p>

                                   <hr>

                                   <!-- Actions -->
                                   <div class="d-flex justify-content-between">

                                        <!-- VIEW -->
                                        <a href="/admin/view_user/<%= user.id %>"
                                             class="btn btn-primary btn-sm px-3 fs-6 p-2 fw-semibold">
                                             View
                                        </a>

                                        <!-- VIEW ORDERS -->
                                        <a href="/admin/user_orders/<%= user.id %>"
                                             class="btn btn-info btn-sm px-3 fs-6 p-2 fw-semibold text-white">
                                             Orders
                                        </a>

                                        <!-- BLOCK USER -->
                                        <a href="/admin/block_user/<%= user.id %>"
                                             class="btn btn-warning btn-sm px-3 fs-6 p-2 fw-semibold">
                                             Block
                                        </a>

                                        <!-- RESET PASSWORD -->
                                        <a href="/admin/reset_password/<%= user.id %>"
                                             class="btn btn-danger btn-sm px-3 fs-6 p-2 fw-semibold">
                                             Reset Password
                                        </a>

                                   </div>

                              </div>
                         </div>
                    </div>

                    <% }) %>

          </div>

     </div>

     <%- include("footer.ejs") %>